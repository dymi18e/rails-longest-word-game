
<h1>From New ERB</h1>
<div>
<% @letters.each do | letter | %>
  <button type="button fs-1" class="btn btn-primary m-3"> <%=letter.capitalize%></button>
<% end %>
</div>
<form action="/score" method="post" data-turbo="false">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <%= hidden_field_tag :letters, @letters %>
  <div class="input-group m-3">
    <input type="text" class="form-control" placeholder="Recipient's username" name="word" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play</button>
  </div>
</form>
